pipeline {
  agent any

    stages {
      stage ("This is programs") {
          steps {  
            sh '''
                  python3 even.py
                    ls
                    echo "this is check whether its running or not"
              '''
      }
    }
    stage("run the first.py") {
      steps {
          sh ''' 
                python3 first.py
                echo "This is first.py program"
}
}

  }
}
